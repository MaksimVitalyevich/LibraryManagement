@{
	ViewData["Title"] = "Авторизация/Вход";
	var savedUsers = ViewBag.Users as List<string>;
}

<h2>Авторизация</h2>

<form asp-action="Login" method="post" class="authorize-block">
	<label>Введите логин:</label>
	<input type="text" name="username"/>

	@if (savedUsers != null && savedUsers.Count > 0)
	{
		<p>Сохраненные использованные логины:</p>
		<select name="username">
			<option value="">-- Выберите логины --</option>
			@foreach (var savedUser in savedUsers)
			{
				<option value="@savedUser">@savedUser</option>
			}
		</select>
	}

	<div style="margin-top:10px;">
		<button type="submit" class="papernote-btn">Войти</button>
		<button type="submit" name="anonymous" value="true" class="papernote-btn">Войти в качестве 'Гость'</button>
	</div>
	@if (ViewBag.Error != null)
	{
		<p style="color: red">@ViewBag.Error</p>
	}
</form>
